<div class='recipes'>
    <h2>My Recipes</h2>
    <div class= 'recipes-container'>
        <% @recipes.each do |recipe| %>
        <%= link_to recipe_path(recipe) do %>
            <div class='recipe'>
                <div class='recipe-name'>
                    <h4><%= recipe.name %></h4>
                    <% if can? :destroy, recipe %>
  <%= link_to 'Remove', recipe_path(recipe),class:'r-btn', method: :delete, data: { turbo_method: :delete, turbo_confirm: 'Are you sure you want to delete this recipe?' } %>
   <% end %>
                </div>
                <div class='description'>
                <p><%=recipe.description%></p>
                </div>
            </div>
           
        <% end %>
         <%end%>
    </div>
    <%= link_to 'Create New Recipe', new_recipe_path, class: 'recipe-btn' %>
