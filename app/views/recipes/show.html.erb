<div class='show-recipes'>
<div class= 'recipe-details'>
<h2>Recipe <%= @recipe.id %></h2>
<div class='separator'>
<div class='my-detail'>
<p>Preparation time: <%= @recipe.preparation_time %> minutes</p>
<p>Cooking time: <%= @recipe.cooking_time %> minutes</p>
<p>Steps goes here...</p>
</div>
<div>
<%= form_for @recipe, url: toggle_public_recipe_path(@recipe), method: :patch, remote: true, class: 'toggle-form' do |f| %>
          <%= f.hidden_field :authenticity_token, value: form_authenticity_token %>
          <span>Public<span>
          <label class="switch">
            <%= f.check_box :public, { class: 'form-check-input', onchange: 'this.form.submit();' }, true, false %>
            <span class="slider round"></span>
          </label>
        <% end %>
</div>
</div>
<div class="reps-btn">
      <%= link_to 'Generate shopping list',general_shopping_list_path,class:'generate'%>
         <%= link_to 'Add Food', new_recipe_recipe_food_path(@recipe),class:'generate' %>
    </div>
</div>
<div class='table'>
<table>
<tr>
  <th>Food</th>
  <th>Quantity</th>
  <th>Value</th>
  <th>Action</th>
</tr>
<%@recipe_foods.each do |recipe_food|%>
<tr>
  <td><%=recipe_food.name%></td>
  <td><%=recipe_food.quantity%></td>
  <td>$<%=recipe_food.price%></td>
  <td><%= link_to "Delete", recipe_food, class: "btn btn-outline-danger", method: :delete, data: { "turbo-method": :delete, turbo_confirm: "Are you sure?" } %></td>
<%end%>
</table>
</div>
</div>









