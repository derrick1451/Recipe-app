<div class="container liz">
  <h1 class="display-4">Shopping List</h1>
  <div class="d-between">
    <div class="h2">Amount of food items to buy: <span class="h3"><%= @foods.length %></span></div>
    <div class="h2">Total value of food needed: <span class="h3">$ <%= @total_price * -1 %></span></div>
  </div>

  <div>
    <% if @foods.length.zero? %>
    <h2 class="mt-4">List Table</h2>
    <% else %>
      <table>
        <thead class="thead-dark">
          <tr class="h2">
            <th>Food</th>
            <th>Quantity</th>
            <th>Price</th>
          </tr>
        </thead>
        <tbody>
          <% @foods.each do |food| %>
            <tr>
              <td><%= food[:name] %></td>
              <td><%= food[:quantity] * -1 %></td>
              <td><%= food[:price] * -1 %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% end %>
  </div>
</div>